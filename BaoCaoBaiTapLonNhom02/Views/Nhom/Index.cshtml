@model IEnumerable<BaoCaoBaiTapLonNhom02.Models.Nhom>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách Mã-Môn học</h1>

<p>
    <a asp-action="Create">Tạo Mã-Môn học</a>
</p>
<table class="table">
    <thead>
        <tr>
              <th>
                @Html.DisplayNameFor(model => model.MaNhom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenNhom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.MaNhom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenNhom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaNhom">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaNhom">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaNhom">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
